{# Checkboxes Wrapper #}

{% import "_macros" as macros %}
{% set id = id ?? ('checkboxes-'~random()) %}
{% set heading = heading ?? false %}
{% set checkboxes = checkboxes ?? [] %}

{% if heading %}
	<label for="">{{ heading }}</label>
{% endif %}

{% for checkbox in checkboxes %}
	{{ macros.checkbox(checkbox) }}
{% endfor %}
