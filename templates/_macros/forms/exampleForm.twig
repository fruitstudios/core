{% import "_macros" as macros %}

{% set sections = sections ?? false %}
{% set sectionsToShow = sections ? sections : [
	'section',
	'section2',
] %}

{% set hidden = {
    entryId : 999,
    enabled: 1,
    sectionId: 999,
}|merge(hidden ?? {}) %}

{% set fields %}
	{% if 'section' in sectionsToShow %}{% endif %}
	{% if 'section2' in sectionsToShow %}{% endif %}
{% endset %}

{% set successBlock %}
	Success Message Here
{% endset %}

{{ macros.form({
	id: 'formId'),
	action: 'site/entries/save-entry',
	hidden: hidden,
	fields: fields,
	successBlock: successBlock
	successToast: false
}) }}

