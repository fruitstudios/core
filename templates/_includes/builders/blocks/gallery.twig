{% set gallery = block.gallery ?? false %}
{% set noOfImages = gallery|length %}

{# Grid Wrapper #}
<div class="{{ spacing|default('mb-4') }}">

	{% switch noOfImages %}

		{% case "1" %}

	        <div class="-mx-2 flex">
	            <div class="mx-2">
	                <img class="block w-full" src="{{ gallery[0].url() }}">
	            </div>
	        </div>

	    {% case "2" %}

	        <div class="-mx-2 md:flex">
	            <div class="px-2 mb-4 md:mb-0 md:flex-1 w-full md:w-1/2">
	                <img class="block w-full" src="{{ gallery[0].url() }}">
	            </div>
	            <div class="px-2 md:flex-1 w-full md:w-1/2">
	                <img class="block w-full" src="{{ gallery[1].url() }}">
	            </div>
	        </div>

	    {% case "3" %}

	        <div class="-mx-2 flex flex-wrap">
	            <div class="px-2 mb-4 w-full md:w-1/3">
	                <img class="block w-full" src="{{ gallery[0].url() }}">
	            </div>
	            <div class="px-2 mb-4 w-1/2 md:w-1/3">
	                <img class="block w-full" src="{{ gallery[1].url() }}">
	            </div>
	            <div class="px-2 mb-4 w-1/2 md:w-1/3">
	                <img class="block w-full" src="{{ gallery[2].url() }}">
	            </div>
	        </div>

	    {% case "4" %}

	        <div class="-mx-2 flex flex-wrap">
	            <div class="px-2 mb-4 w-full md:w-1/2">
	                <img class="block w-full" src="{{ gallery[0].url() }}">
	            </div>
	            <div class="px-2 mb-4 w-1/2 md:w-1/2">
	                <img class="block w-full" src="{{ gallery[1].url() }}">
	            </div>
	            <div class="px-2 mb-4 w-1/2 md:w-1/2">
	                <img class="block w-full" src="{{ gallery[2].url() }}">
	            </div>
	            <div class="px-2 mb-4 w-full md:w-1/2">
	                <img class="block w-full" src="{{ gallery[3].url() }}">
	            </div>
	        </div>

	{% endswitch %}

</div>
