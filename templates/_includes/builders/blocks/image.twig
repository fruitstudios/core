{% switch block.imageSize %}

	{% case "small" %}
		{% set size = 'md:w-1/3 mx-auto' %}

	{% case "medium" %}
		{% set size = 'md:w-2/3 mx-auto' %}

{% endswitch %}

<figure class="text-center {{ spacing|default('mb-4') }}">

	<img class="block {{ size|default('md:w-full') }}" src="{{ block.image.one().url() }}">

	{% if block.imageCaption %}
		<figcaption class="pt-2 text-xs md:text-sm block">{{ block.imageCaption }}</figcaption>
	{% endif %}

</figure>

