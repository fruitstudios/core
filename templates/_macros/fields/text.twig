{# Text Input #}

{% set id = id ?? ('input-'~random()) %}
{% set name = name ?? '' %}
{% set type = type ?? 'text' %}
{% set value = value ?? '' %}
{% set disabled = disabled ?? false %}
{% set required = required ?? false %}
{% set additionalAttributes = attributes ?? [] %}

{% set classes = [
    'input',
    (inputClass ?? null),
]|filter|join(' ') %}

{% set attributes = [
    (disabled ? 'disabled' : null),
    (required ? 'required' : null),
    ((placeholder ?? false) ? 'placeholder="'~placeholder~'"' : null),
]|merge(additionalAttributes)|filter|join(' ') %}

<input id="{{ id }}" class="{{ classes }}" type="{{ type }}" name="{{ name }}" value="{{ value }}"{{ attributes|raw }}>
